<UserControl x:Class="SmartShopping.LastProductsUC.LastProductsUserControlV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartShopping.LastProductsUC" xmlns:convert="clr-namespace:SmartShopping.Convertors" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <convert:Base64ToBitmapImageConvertor x:Key="Base64ToBitmapImageConvertor"/>
    </UserControl.Resources>
    
    <StackPanel Margin="0 0 5 0" Orientation="Horizontal" FlowDirection="RightToLeft">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="LastProductItemSource" Background="DimGray" ItemsSource="{Binding LastproductsList }" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0 5 0 0" CornerRadius="7" x:Name="Border" Padding="8" Background="GhostWhite" BorderThickness="0 0 0 1" BorderBrush="{DynamicResource MaterialDesignDivider}">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Checkerz" />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <ToggleButton
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsSelected}"
                                Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                ToolTip="MaterialDesignFlatPrimaryToggleButton"
                                Content="{materialDesign:PackIcon Kind=CloseThick}" />
                                <StackPanel Margin="8 0 0 0" Grid.Column="1">
                                    <TextBlock  Text="rfj rkjfnmrkjhk" FontSize="40"/>

                                    <!--<TextBlock Text="{Binding name}" FontSize="40"/>-->
                                </StackPanel>
                                <Border CornerRadius="8,8,8,8" Width="50" Height="50">
                                    <Border.Background>
                                        <ImageBrush ImageSource="../Images/background.jpg"/>
                                    </Border.Background>
                                </Border>
                                <Ellipse Width="50" Height="50" Grid.Column="0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="../Images/background.jpg" />
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>

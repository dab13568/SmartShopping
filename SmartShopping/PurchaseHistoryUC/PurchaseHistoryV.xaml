            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" Foreground="Gray" Content="כאן תוכל לראות את היסטוריית הקניות שלך בטווח של זמן"/>
        <Grid Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"  Orientation="Horizontal" FlowDirection="RightToLeft" >
                <DatePicker Margin="20 0 0 0" Width="160" materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.Hint="תאריך התחלתי" Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                <materialDesign:PackIcon Kind="MinusThick" VerticalAlignment="Center" Margin="20 0 0 0" />
                <DatePicker Margin="20 0 0 0" Width="160" materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.Hint="תאריך סופי" Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
            </StackPanel>
            <Button Grid.Column="1" Style="{StaticResource MaterialDesignRaisedButton}" Width="120" VerticalAlignment="Center" Height="40" HorizontalAlignment="Right"  Margin="0 0 20 0" materialDesign:ButtonAssist.CornerRadius="10" Background="DimGray">
                <TextBlock Text="חפש" />
            </Button>
        </Grid>

